{
	"name": "vskubi-lite",
	"version": "1.0.1",
	"displayName": "Kubi-lite",
	"description": "Kubernetes CA-GIP/Kubi CLI, Lite wrapper version compatible with VSCode and Theia IDE",
	"engines": {
		"vscode": "^1.41.0"
	},
	"license": "MIT",
	"publisher": "lefebsy",
	"icon": "resources/logo/logo-128x128.png",
	"bugs": {
		"url": "https://github.com/lefebsy/vskubi-lite/issues"
	},
	"homepage": "https://raw.githubusercontent.com/lefebsy/vskubi-lite/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/lefebsy/vskubi-lite.git"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Kubernetes",
		"k8s",
		"Kubi",
		"Kubi-lite",
		"Theia"
	],
	"activationEvents": [
		"*",
		"onCommand:extension.vskubi-identity"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"category": "Kubi",
				"command": "extension.vskubi-identity",
				"title": "Execute default kubi action (kubeConfig or token)"
			},
			{
				"category": "Kubi",
				"command": "extension.vskubi-default-endpoint-switch",
				"title": "Select default kubi endpoint from your clusters list"
			},
			{
				"category": "Kubi",
				"command": "extension.vskubi-default-namespace-switch",
				"title": "Change default namespace in kubeconfig from your favorite list"
			}
		],
		"keybindings": [
			{
				"command": "extension.vskubi-identity",
				"key": "ctrl+k ctrl+i",
				"mac": "cmd+k cmd+i"
			},
			{
				"command": "extension.vskubi-default-endpoint-switch",
				"key": "ctrl+k ctrl+d",
				"mac": "cmd+k cmd+d"
			},
			{
				"command": "extension.vskubi-default-namespace-switch",
				"key": "ctrl+k ctrl+n",
				"mac": "cmd+k cmd+n"
			}
		],
		"configuration": {
			"title": "Kubi-lite",
			"properties": {
				"Kubi.path": {
					"type": "string",
					"scope": "resource",
					"default": "kubi",
					"description": "Kubi exe path"
				},
				"Kubi.endpoint-default": {
					"type": "string",
					"scope": "resource",
					"default": "https://kubi.cluster1.example.com",
					"description": "[ctrl+k ctrl+i] - Default kubi server endpoint, ex. : https://kubi.cluster1.example.com"
				},
				"Kubi.endpoint-list": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "[ctrl+k ctrl+d] - Optional - List of available endpoints (i.e. dev, prod...), comma separated, ex. : 'https://kubi.cluster2.example.com,https://kubi.cluster2.example.com'"
				},
				"Kubi.login": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "Default login, ex. : me@abc.com"
				},
				"Kubi.action": {
					"type": "string",
					"default": "generate-config",
					"description": "Select kubi default action : kubeConfig or Token",
					"enum": [
						"generate-config",
						"generate-token"
					],
					"enumDescriptions": [
						"Generate a config in ~/.kube/config",
						"Generate a token only & copy in clipboard"
					]
				},
				"Kubi.extra": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "Custom string to play with parameters like '--use-proxy' or '--insecure'"
				},
				"Kubi.favoriteNamespaces": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "[ctrl+k ctrl+n] - Optional - List of your favorites namespaces, comma separated. Example 'sys,pub' will retrieve a sorted matching namespace list like 'kube-public,kube-system'"
				}
			}
		},
		"menus": {
			"view/item/context": [
				{
					"command": "extension.vskubi-identity",
					"when": "view == extension.vsKubernetesExplorer && viewItem =~ /^vsKubernetes\\.\\w*cluster.*$/i",
					"group": "4"
				}
			],
			"view/title": [
				{
					"command": "extension.vskubi-identity",
					"when": "view == extension.vsKubernetesExplorer",
					"group": "2"
				}
			]
		}
	},
	"scripts": {
		"clean": "rm -rf ./out",
		"vscode:prepublish": "npm i && webpack --mode production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"package": "npm run sonar && vsce package",
		"sonar": "sh updateSonarProps.sh"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/js-yaml": "^3.12.2",
		"@kubernetes/client-node": "0.11.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/user-home": "^2.0.0",
		"@types/vscode": "^1.41.0",
		"electron": "8.0.1",
		"glob": "^7.1.6",
		"js-yaml": "3.13.1",
		"mocha": "^6.1.4",
		"ts-loader": "^6.0.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"user-home": "^2.0.0",
		"vsce": "^1.73.0",
		"vscode-test": "^1.0.2",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11",
		"ws": "7.2.1"
	}
}
